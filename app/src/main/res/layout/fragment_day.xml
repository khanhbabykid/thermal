                    <ImageView
                        android:id="@+id/ivSwitchIcon"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sun_switch_ico"/>

                    <TextView
                        android:id="@+id/tvCurrentTemperature"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:text="00.0℃"
                        android:textColor="@android:color/white"
                        android:textSize="50sp"/>
                    <LinearLayout android:layout_width="fill_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="vertical">
                        <Button
                            android:id="@+id/btSetPermanently"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/tvModeNote"
                            android:onClick="setPermanently"
                            android:text="Set&#10;Permanently"
                            android:textSize="20sp"
                            android:singleLine="true"
                            android:layout_weight="1"
                            />

                        <!--<Button-->
                            <!--android:id="@+id/btVacationMode"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:onClick="enableVacationMode"-->
                            <!--android:text=""-->
                            <!--android:textSize="20sp"-->
                            <!--/>-->
                        <ToggleButton android:layout_width="fill_parent"
                                      android:layout_height="fill_parent"
                            android:text="Vacation Mode"
                            android:id="@+id/btnVacation"
                            android:textOn="Vacation ON"
                            android:textOff="Vacation OFF"
                            android:textSize="20sp"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:checked="false"/>

                        <!--<Button-->
                            <!--android:id="@+id/btSetTemporarily"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:onClick="setTemporarily"-->
                            <!--android:text="Set&#10;Temporarily"-->
                            <!--android:textSize="18sp"-->
                            <!--/>-->
                    </LinearLayout>
                    <TextView
                        android:gravity="right"
                        android:id="@+id/tvDay"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Day Temperature"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/tvdaytemp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="00.0℃"
                        android:gravity="right"
                        android:textColor="@android:color/white"
                        android:textSize="25sp"/>
                    <TextView
                        android:gravity="right"
                        android:id="@+id/tvNight"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Night Temperature"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"/>
                    <TextView
                        android:gravity="right"
                        android:id="@+id/tvnighttemp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="00.0℃"
                        android:textColor="@android:color/white"
                        android:textSize="25sp"/>


                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
